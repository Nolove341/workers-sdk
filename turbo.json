{
	"$schema": "http://turbo.build/schema.json",
	"remoteCache": {
		"signature": true
	},
	"globalEnv": [
		"CI_OS",
		"NODE_VERSION",
		"VITEST",
		"NODE_DEBUG",
		"NODE_EXTRA_CA_CERTS"
	],
	"globalPassThroughEnv": [
		"CI",
		"VSCODE_INSPECTOR_OPTIONS",
		"WRANGLER_LOG_PATH",
		"TEST_REPORT_PATH",
		"CLOUDFLARE_CONTAINER_REGISTRY",
		"DOCKER_HOST",
		"WRANGLER_DOCKER_HOST",
		"TURBO_HASH",
		"TURBO_TASK",
		"TURBO_INVOCATION_DIR",
		"npm_config_user_agent"
	],
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputLogs": "new-only"
		},
		"test": {
			"dependsOn": ["build"]
		},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"topological": {
			"dependsOn": ["^topological"]
		},
		"check:lint": {
			"dependsOn": ["topological"]
		},
		"check:type": {
			"dependsOn": ["topological"]
		},
		"type:tests": {
			"dependsOn": ["topological"]
		},
		"test:ci": {
			"dependsOn": ["build"],
			"outputLogs": "new-only"
		},
		"test:e2e": {
			"env": ["WRANGLER", "CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_API_TOKEN"],
			"dependsOn": ["build"],
			"outputLogs": "new-only"
		},
		"//#check:format": {
			"cache": true
		}
	}
}
